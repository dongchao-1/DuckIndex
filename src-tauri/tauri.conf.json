{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeepIndex",
  "version": "0.1.0",
  "identifier": "DeepIndex",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DeepIndex",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "./tessdata"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
